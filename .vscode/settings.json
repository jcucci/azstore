{
    // C# and .NET settings
    "dotnet.defaultSolution": "src/Azstore.sln",
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.inlayHints.enableInlayHintsForParameters": true,
    "dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,
    "dotnet.inlayHints.enableInlayHintsForIndexerParameters": true,
    "dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
    "dotnet.inlayHints.enableInlayHintsForOtherParameters": true,
    "dotnet.inlayHints.suppressInlayHintsForParametersThatDifferOnlyBySuffix": true,
    "dotnet.inlayHints.suppressInlayHintsForParametersThatMatchMethodIntent": true,
    "dotnet.inlayHints.suppressInlayHintsForParametersThatMatchArgumentName": true,
    // File exclusions for better performance
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true
    },
    "search.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/.vs": true,
        "**/node_modules": true
    },
    // Editor settings
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.rulers": [
        220
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 220,
    // Terminal settings for better CLI experience
    "terminal.integrated.cwd": "${workspaceFolder}",
    // File associations
    "files.associations": {
        "*.toml": "toml"
    },
    // Debug settings
    "debug.console.acceptSuggestionOnEnter": "off",
    "debug.openDebug": "openOnDebugBreak",
    // Testing
    "dotnet.unitTests.runSettingsPath": "",
    // Extensions recommendations
    "extensions.recommendations": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-vscode.vscode-json",
        "tamasfe.even-better-toml",
        "editorconfig.editorconfig"
    ]
}